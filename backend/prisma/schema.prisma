datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String      @id @default(cuid())
  firstName  String
  lastName   String
  foodEntries FoodEntry[]
}

model FoodEntry {
  id          String   @id @default(cuid())
  foodItem    String
  servingSize Float
  protein     Float
  carbs       Float
  calories    Float
  fat         Float
  date        DateTime
  userId      String
  user        User      @relation(fields: [userId], references: [id])
}
